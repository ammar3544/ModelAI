name: Run AI Model

on:
  push:
    branches:
      - main
  schedule:
    - cron: '0 12 * * *'  # Jalan setiap hari pukul 12:00 UTC

jobs:
  run-model:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout kode
        uses: actions/checkout@v3

      - name: Setup Python
        uses: actions/setup-python@v3
        with:
          python-version: '3.8'

      - name: Jalankan model
        run: python main.py
